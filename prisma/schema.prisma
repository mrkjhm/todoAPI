// --- GENERATOR ---
// Ibig sabihin: gagawa si Prisma ng "client" na pwede mong gamitin
// sa backend para mag-run ng database queries (prisma.user.findMany(), etc.)

generator client {
  provider = "prisma-client-js"
}

// --- DATASOURCE ---
// Dito nakalagay ang database connection mo.
// Gumagamit ka ng PostgreSQL at kinukuha niya ang URL sa .env file.

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// ----------------------------
//        USER MODEL
// ----------------------------

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  isAdmin    Boolean  @default(false)
  todos      Todo[]
  projects   Project[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("users")
}



// ============================
//        PROJECT MODEL
//  (Sticky note / Topic card)
// ============================

model Project {
  id         Int      @id @default(autoincrement())
  title      String
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  todos      Todo[]   
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}



// ----------------------------
//        TODO MODEL
// ----------------------------

model Todo {
  id          Int       @id @default(autoincrement())
  title       String
  isCompleted Boolean   @default(false)
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  projectId   Int        
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
